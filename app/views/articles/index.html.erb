<h1>Listing all articles</h1>
<%= link_to 'Create new article', new_article_path %>

<table >
  <% if @article %>
      <caption align="center">Articles:-</caption>
      <tr>

        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Option</th>


      </tr>
  <% @article.each do |e| %>
      <tr align="center">

          <td><%= e.title %></td>
          <td><%= e.description %></td>
          <td> <%= link_to 'Edit', edit_article_path(e) %></td>
          <td><%= link_to 'Show', article_path(e) %></td>
          <td><%= link_to 'Delete', article_path(e), method: :delete, data: {confirm: "Are you sure?"} %></td>



      </tr>
          <% end %>
<% end %>
</table>
