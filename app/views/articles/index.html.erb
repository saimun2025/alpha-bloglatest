<h1>Listing the articles</h1>


<table border="5">
  <% if @article %>
      <caption align="center">Articles:-</caption>
      <tr>
        <th> Id </th>
        <th>Title</th>
        <th>Description</th>
        <th>Created_at</th>
        <th>Updated_at</th>


      </tr>
  <% @article.each do |e| %>
      <tr align="center">
          <td><%= e.id %></td>
          <td><%= e.title %></td>
          <td><%= e.description %></td>
          <td><%= e.created_at %></td>
          <td><%= e.updated_at %></td>
          <td> <%= link_to 'Edit', edit_article_path(e) %></td>
          <td><%= link_to 'Show', article_path(e) %></td>



      </tr>
          <% end %>
<% end %>


</table>
<h3 align="center">Article List</h3>
<div align="center">
  <% if @article %>

  <ol >
    <% @article.each do |e| %>
    <li align="center"><h3><%= e.title %></h3>
      <br>
   <%= e.description %>
      <br>
    <strong><%= e.created_at %></strong></li>

  <% end %>
  </ol>
      <% end %>


</div>